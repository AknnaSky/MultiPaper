+        if (chunkEntities == null) {
+            chunkEntities = level.getEntityLookup().getChunk(pos.x, pos.z);
+            if (chunkEntities == null) {
+                new Exception("Entities are not loaded in " + level.convertable.getLevelId() + pos + ", sending null entities").printStackTrace();
+                return null;
+            }
+        }
