+package puregero.multipaper.commands;
+
+import org.bukkit.permissions.Permission;
+import org.bukkit.permissions.PermissionDefault;
+import org.bukkit.util.permissions.DefaultPermissions;
+
+public class MultiPaperPermissions {
+
+    private static final Permission ROOT = DefaultPermissions.registerPermission("multipaper", "Gives the user the ability to use all MultiPaper utilities and commands");
+    private static final Permission COMMAND = DefaultPermissions.registerPermission(ROOT.getName() + ".command", "Gives the user the ability to use all MultiPaper commands", ROOT);
+
+    /**
+     *
+     * @param command eg "mpdebug". This will become "multipaper.command.mpdebug"
+     * @return "multipaper.command.mpdebug" for a given command "mpdebug"
+     */
+    public static String registerCommandPermission(String command, String description, PermissionDefault defaultPermission) {
+        return DefaultPermissions.registerPermission(COMMAND.getName() + "." + command, description, defaultPermission, COMMAND).getName();
+    }
+
+}
